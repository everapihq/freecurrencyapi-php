{
    "name": "everapi/freecurrencyapi-php",
    "description": "A PHP wrapper for the freecurrencyapi.com API",
    "keywords": [
        "freecurrencyapi.com",
        "freecurrencyapi-php",
        "free currency api ",
        "api",
        "currency api",
        "free currency conversion API",
        "foreign exchange rates API",
        "exchange rates data",
        "rates API"
    ],
    "homepage": "https://github.com/everapihq/freecurrencyapi-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Dominik Kukacka",
            "email": "office@everapi.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "FreeCurrencyApi\\FreeCurrencyApi\\": "src"
        }
    },
    "scripts": {
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
